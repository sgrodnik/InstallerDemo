<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Package Manufacturer="Sener" Name="ExampleProductName"
      UpgradeCode="00000000-0000-0000-0000-000000000000"
      Scope="perUser"
      Version="1.2.3.4">

    <MediaTemplate EmbedCab="yes" CompressionLevel="high" />
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed"
                  AllowSameVersionUpgrades="no" />

    <StandardDirectory Id="AppDataFolder">
        <Directory Name="Autodesk\Revit\Addins\2023"               Id="Addins2023" />
        <Directory Name="Autodesk\Revit\Addins\2023\!(bind.Property.Manufacturer)\!(bind.Property.ProductName)" Id="Bin2023" />
    </StandardDirectory >

    <Feature Id="Main" >
      <Component Directory="Addins2023"> <File Source="..\BIMTools\BimToolsR23.addin" />                   <RemoveFolder Id="Addins2023" On="uninstall"/> </Component>
      <Component Directory="Bin2023"> <File Source="..\BIMTools\bin\release\BimToolsR23.dll" Id="R23dll"/> <RemoveFolder Id="Bin2023"    On="uninstall"/> </Component>
      <Component Directory="Bin2023"> <File Source="..\BIMTools\bin\release\BimToolsR23.pdb" /> </Component>
      <Component Directory="Bin2023"> <File Source="..\BIMTools\bin\release\EPPlus.dll"         /> </Component>
      <Component Directory="Bin2023"> <File Source="..\BIMTools\bin\release\MdXaml.dll"         /> </Component>
      <Component Directory="Bin2023"> <File Source="..\BIMTools\bin\release\MdXaml.Plugins.dll" /> </Component>
    </Feature>

  </Package>
</Wix>
